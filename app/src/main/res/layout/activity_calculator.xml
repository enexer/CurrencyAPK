<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.as.waluty.Calculator"
    android:background="#ffffff">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:id="@+id/view6455"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextFrom"
        android:text="1"

        android:digits="0123456789."
        android:inputType="numberDecimal"
        android:textColor="#ff0509"
        android:layout_alignTop="@+id/view64553"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@color/accent_material_light"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@color/accent_material_light"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_toEndOf="@+id/textViewFrom"
        android:layout_alignTop="@+id/spinner"
        android:layout_toRightOf="@+id/textViewFrom"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wynik:"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/editTextFrom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kwota:"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/view64553"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waluta bazowa:"
        android:id="@+id/textView3"
        android:textSize="15dp"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waluta docelowa:"
        android:id="@+id/textView10"
        android:textSize="15dp"
        android:textColor="@android:color/background_dark"
        android:layout_above="@+id/spinner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/textViewResult"
        android:textSize="20dp"
        android:textColor="#0509ff"
        android:layout_below="@+id/editTextFrom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSwitch"
        android:drawableLeft="@android:drawable/ic_popup_sync"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KURS:"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:textColor="#43b6fe"
        android:layout_below="@+id/buttonSwitch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:id="@+id/view64553"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234.1234"
        android:id="@+id/textViewFrom"
        android:textSize="20dp"
        android:background="#3a3939"
        android:textColor="#f8fbfb"
        android:layout_above="@+id/view64553"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
