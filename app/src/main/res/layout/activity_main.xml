<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.as.waluty.MainActivity"
    android:background="#ffffff">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="KALKULATOR"
        android:id="@+id/buttoncc"
        android:onClick="openCalculator"
        android:layout_above="@+id/view7"
        android:layout_alignRight="@+id/list2"
        android:layout_alignEnd="@+id/list2"
        android:layout_marginTop="69dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/buttonFavorite"
        android:layout_toRightOf="@+id/buttonFavorite"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <ListView
        android:id="@+id/list2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:listitem="@android:layout/simple_list_item_2"
        android:layout_marginBottom="71dp"
        android:background="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignBottom="@+id/buttoncc" />
    <ListView
        android:id="@+id/listCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignParentEnd="false"
        android:layout_alignLeft="@+id/view7"
        android:layout_alignStart="@+id/view7"
        android:layout_below="@+id/view6455" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Waluta Bazowa"
        android:id="@+id/textView6"
        android:layout_above="@+id/listCurrency"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:id="@+id/view7"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#000000"
        android:id="@+id/view4"
        android:alpha="0.2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/listCurrency"
        android:layout_alignTop="@+id/textView6" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:id="@+id/view6455"
        android:layout_marginTop="138dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:id="@+id/view64553"
        android:layout_alignTop="@+id/buttonRefreshF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Kurs"
        android:id="@+id/textView8"
        android:layout_above="@+id/listCurrency"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Waluta Docelowa"
        android:id="@+id/textView7"
        android:layout_above="@+id/listCurrency"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRefresh"
        android:drawableLeft="@drawable/refresh"
        android:layout_above="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ULUBIONE"
        android:onClick="openFavorite"
        android:id="@+id/buttonFavorite"
        android:layout_alignTop="@+id/buttoncc"
        android:layout_alignBottom="@+id/buttoncc"
        android:layout_toRightOf="@+id/buttonRefresh"
        android:layout_alignRight="@+id/textView8"
        android:layout_alignEnd="@+id/textView8" />

    <!--<android.support.design.widget.NavigationView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--app:menu="@menu/navigation_menu">-->
    <!--</android.support.design.widget.NavigationView>-->

</RelativeLayout>