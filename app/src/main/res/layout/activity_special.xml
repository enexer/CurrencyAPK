<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.as.waluty.Special"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Wybrana waluta: "
        android:id="@+id/textViewTitle"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewCode"
        android:textColor="#000000"
        android:layout_below="@+id/imageViewSpecialC"
        android:layout_alignLeft="@+id/textViewTitle"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_alignRight="@+id/view645533"
        android:layout_alignEnd="@+id/view645533"
        android:textAlignment="textEnd" />

    <ListView
        android:id="@+id/sp_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="241dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/view645533" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="224dp"
        android:layout_alignRight="@+id/sp_list"
        android:layout_alignEnd="@+id/sp_list"
        android:background="#ffffff"
        android:layout_below="@+id/view645533" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageViewSpecialC"
        android:src="@drawable/default_status"
        android:layout_above="@+id/view645533"
        android:layout_toLeftOf="@+id/textViewCode2"
        android:layout_toStartOf="@+id/textViewCode2" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:id="@+id/view645533"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:id="@+id/view6455345"
        android:layout_alignBottom="@+id/sp_list"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="XYZ"
        android:id="@+id/textViewCode2"
        android:textColor="#000000"
        android:layout_above="@+id/view645533"
        android:layout_alignRight="@+id/view645533"
        android:layout_alignEnd="@+id/view645533" />
</RelativeLayout>
